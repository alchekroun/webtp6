{% extends 'base.html.twig' %}

{% block title %}Se connecter!{% endblock %}

{% block body %}
    <div class="login-dark" style="background-image: url('/assets/img/wallhaven-4y5dyg.png');">
        <form method="post" style="background-color: #1e2833;">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            {% if app.user %}
                <div class="mb-3">
                    Vous êtes déjà connecté avec : {{ app.user.username }}, <a href="{{ path('app_logout') }}">cliquez
                        ici pour vous déconnecter</a>
                </div>
            {% endif %}
            <h2 class="sr-only">Login Form</h2>
            <div class="illustration"><i class="far fa-user" style="color: #2980ef;"></i></div>
            <div class="form-group"><input class="form-control" type="text" value="{{ last_username }}" name="username"
                                           placeholder="Identifiant" autofocus="" required=""></div>
            <div class="form-group"><input class="form-control" type="password" name="password"
                                           placeholder="Mot de passe" required=""></div>
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
            <div class="form-group">
                <button class="btn btn-primary btn-block" data-bs-hover-animate="pulse" type="submit"
                        style="background-color: #214a80;">Se connecter
                </button>
            </div>
            <a class="forgot" href="#">Inscris toi ici si tu n'as pas de compte !</a>
        </form>
    </div>
    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}
{% endblock %}
